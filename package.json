{
  "name": "teaching-center-app",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "next dev --turbo --port 3001",
    "build": "prisma generate && next build",
    "start": "next start",
    "lint": "next lint",
    "postinstall": "prisma generate",
    "local:start": "npm run local:db:start && npm run local:db:setup && npm run dev",
    "local:db:start": "sudo docker compose -f docker-compose.db-only.yml up -d",
    "local:db:stop": "sudo docker compose -f docker-compose.db-only.yml down",
    "local:db:setup": "sleep 8 && npx prisma db push && npx prisma db seed",
    "local:db:reset": "sudo docker compose -f docker-compose.db-only.yml down -v && npm run local:start",
    "preprod:start": "./scripts/start-preprod.sh",
    "preprod:stop": "./scripts/stop-preprod.sh",
    "preprod:logs": "docker compose -f docker-compose.preprod.yml logs -f app",
    "preprod:restart": "docker compose -f docker-compose.preprod.yml restart app",
    "db:seed": "tsx prisma/seed.ts",
    "db:migrate": "prisma migrate dev",
    "db:generate": "prisma generate",
    "db:studio": "prisma studio",
    "test": "playwright test",
    "test:ui": "playwright test --ui",
    "test:headed": "playwright test --headed",
    "test:debug": "playwright test --debug",
    "test:report": "playwright show-report"
  },
  "dependencies": {
    "@auth/prisma-adapter": "^2.10.0",
    "@headlessui/react": "^2.2.7",
    "@hello-pangea/dnd": "^18.0.1",
    "@heroicons/react": "^2.2.0",
    "@hookform/resolvers": "^5.2.1",
    "@jest/globals": "^30.1.2",
    "@playwright/test": "^1.55.0",
    "@prisma/client": "^6.14.0",
    "@tanstack/react-query": "^5.85.6",
    "@tanstack/react-query-devtools": "^5.85.6",
    "@types/bcryptjs": "^2.4.6",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/pg": "^8.15.5",
    "autoprefixer": "^10.4.21",
    "bcryptjs": "^3.0.2",
    "chart.js": "^4.5.0",
    "chartjs-adapter-date-fns": "^3.0.0",
    "clsx": "^2.1.1",
    "date-fns": "^4.1.0",
    "dotenv": "^17.2.1",
    "jose": "^6.0.12",
    "jsonwebtoken": "^9.0.2",
    "lucide-react": "^0.539.0",
    "next": "15.4.6",
    "next-auth": "^4.24.11",
    "next-intl": "^4.3.4",
    "pg": "^8.16.3",
    "react": "^18",
    "react-chartjs-2": "^5.3.0",
    "react-dom": "^18",
    "react-hook-form": "^7.62.0",
    "zod": "^4.0.17"
  },
  "devDependencies": {
    "@types/node": "^20",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "eslint": "^8",
    "eslint-config-next": "15.4.6",
    "playwright": "^1.54.2",
    "postcss": "^8",
    "prisma": "^6.16.1",
    "tailwindcss": "^3.4.1",
    "tsx": "^4.20.4",
    "typescript": "^5"
  }
}
